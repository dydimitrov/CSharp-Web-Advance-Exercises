@model IEnumerable<ProductListViewModel>
@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron mt-3" style=" background-color:#AFEEEE">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark"/>
        <h3><a asp-controller="Account" asp-action="Login" class="nav-link-dark">Login</a> to start "eventing".</h3>
        <h3><a asp-controller="Account" asp-action="Register" class="nav-link-dark">Register</a> if you don't have account.</h3>
    </div>
}
else
{
    if (this.User.IsInRole("Admin"))
    {
        <div class="container-fluid text-center">
            <h2>Greetings, @this.User.Identity.Name!</h2>
            <h4>Feel free to view and order any of our products.</h4>
        </div>
        <hr class="hr-2" style="background-color:black" />
    }
    else
    {
        <div class="container-fluid text-center">
            <h2>Greetings, @this.User.Identity.Name!</h2>
            <h4>Enjoy your work today!</h4>
        </div>
        <hr class="hr-2 bg-dark" />
    }
}
