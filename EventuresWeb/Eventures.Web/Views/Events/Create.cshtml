@model EventCreateViewModel

<h1 class="text-center">Create Event</h1>
<hr class="hr-2 eventures-bg-color half-width" />

<form class="mx-auto half-width" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.Name" class="font-weight-bold">Name</label>
            <input asp-for="@Model.Name" class="form-control" placeholder="Hills of Rock...">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.Place" class="font-weight-bold">Place</label>
            <input asp-for="@Model.Place" class="form-control" placeholder="Plovdiv, Bulgaria">
            <span asp-validation-for="@Model.Place" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.Start" class="font-weight-bold">Start</label>
            <input asp-for="@Model.Start" class="form-control" placeholder="01-07-2010 22:00">
            <span asp-validation-for="@Model.Start" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.End" class="font-weight-bold">End</label>
            <input asp-for="@Model.End" class="form-control" placeholder="01-09-2010 04:00">
            <span asp-validation-for="@Model.End" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.Tickets" class="font-weight-bold">Total Tickets</label>
            <input asp-for="@Model.Tickets" type="number" class="form-control" placeholder="132323">
            <span asp-validation-for="@Model.Tickets" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="@Model.PricePerTicket" class="font-weight-bold">Price Per Ticket</label>
            <input asp-for="@Model.PricePerTicket" class="form-control" placeholder="100">
            <span asp-validation-for="@Model.PricePerTicket" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </div>
</form>
