@using Eventures.Models.ViewModels.Order
@model IEnumerable<EventListViewModel>
@{
    ViewData["Title"] = "My Events";
    int counter = 1;
}

<h1 class="text-center font-weight-bold">All Events</h1>
<hr class="hr-2 eventures-bg-color">

<table class="table">
    <thead>
    <tr class="font-weight-bold">
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Start</th>
        <th scope="col">End</th>
        <th scope="col">Tickets</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in @Model)
    {
        <tr>
            <th scope="row">@counter</th>
            <td>@item.Name</td>
            <td>@item.Start.ToString("g")</td>
            <td>@item.End.ToString("g")</td>
            <td>@item.TicketsCount</td>
        </tr>
    }
    </tbody>
</table>

