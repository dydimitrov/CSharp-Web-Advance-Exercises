@model IEnumerable<EventListViewModel>
@{
    ViewData["Title"] = "All";
    int counter = 1;
}

<h1 class="text-center font-weight-bold">All Events</h1>
<hr class="hr-2 eventures-bg-color">

<table class="table">
    <thead>
        <tr class="font-weight-bold">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Start</th>
            <th scope="col">End</th>
            <th scope="col">Place</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>@item.Start.ToString("g")</td>
                <td>@item.End.ToString("g")</td>
                <td>@item.Place</td>
            </tr>
        }
    </tbody>
</table>