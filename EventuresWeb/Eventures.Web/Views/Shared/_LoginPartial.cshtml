@using Microsoft.AspNetCore.Identity

@inject SignInManager<EventuresUser> SignInManager
@inject UserManager<EventuresUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-left">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link nav-link-white">Home</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a asp-controller="Events" asp-action="All" class="dropdown-item">All Events</a>
            </div>
            @if (this.User.IsInRole("Admin"))
            {
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a asp-controller="Events" asp-action="Create" class="dropdown-item">Create Event</a>
                </div>
            }
        </li>

    </ul>

    <ul class="nav navbar-nav navbar-right">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link text-white">Logout</button>
                </li>
            </ul>
        </form>
    </ul>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link nav-link-white">Home</a>
        </li>
    </ul>
    <ul class="nav navbar-nav navbar right">
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="nav-link nav-link-white">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="nav-link nav-link-white">Login</a>
        </li>
    </ul>
}
