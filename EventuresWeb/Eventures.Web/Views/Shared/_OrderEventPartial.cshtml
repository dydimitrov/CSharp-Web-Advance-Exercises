@model Eventures.Models.ViewModels.Order.OrderEventViewModel
@{
    ViewData["Title"] = "_OrderEventPartial";
}
<form asp-controller="Order" asp-action="Add" method="post" class="form-inline">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mx-sm-2 mb-2">
        <label asp-for="@Model.TicketCount" class="font-weight-bold mx-sm-2">Tickets</label>
        <input asp-for="@Model.TicketCount" class="form-control" placeholder="e.g. 1">
        <input asp-for="@Model.EventId" class="form-control" hidden="" />
    </div>
    <button type="submit" class="btn eventures-bg-color mb-2">Order</button>
</form>
