@model Chuska.Models.ViewModels.Product.ProductEditViewModel

@{
    ViewData["Title"] = "Delete";
}
<h1 class="text-center">Delete</h1>
<hr class="hr-2 bg-dark" />
<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mx-auto half-width" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" id="name" value="@Model.Name" name="name" disabled="disabled">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" value="@Model.Price" name="price" disabled="disabled">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4" value="@Model.Description" name="description" disabled="disabled"></textarea>
    </div>
    <h3 class="text-center">Product Type</h3>
    <hr class="w-50 hr-2 bg-dark" />
    <div class="form-group d-flex justify-content-around">
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Food" checked disabled="disabled">Food
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Domestic" disabled="disabled">Domestic
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Health" disabled="disabled">Health
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Cosmetic" disabled="disabled">Cosmetic
        </label>
        <label asp-for="@Model.ProductType" class="radio-inline">
            <input asp-for="@Model.ProductType" type="radio" name="ProductType" value="Other" disabled="disabled">Other
        </label>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Delete</button>
    </div>
</form>



